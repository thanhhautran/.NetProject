
@{
    ViewData["Title"] = "Register";
}
@model WebShop.Models.RegisterModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/contentRegister/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/contentRegister/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/contentRegister/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="border:2px solid black; background-image: url('contentRegister/images/bg-01.jpg');">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "login100-form validate-form flex-sb flex-w" }))
                {
                    @Html.ValidationSummary();
                        <div class="p-t-31 p-b-9">
                            <span class="txt1">
                                Tên tài khoản
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="không bỏ trống tài khoản">
                            <input asp-for="taikhoan" class="input100" type="text">
                            <span asp-validation-for="taikhoan" class="focus-input100" style="color: red;"></span>
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Mật khẩu
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="không bỏ trống password">
                            <input asp-for="matkhau" class="input100" type="password">
                            <span asp-validation-for="matkhau" class="focus-input100" style="color: red;" ></span>
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Xác nhận mật khẩu
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="không bỏ trống password">
                            <input asp-for="re_matkhau" class="input100" type="password">
                            <span asp-validation-for="re_matkhau" class="focus-input100" style="color: red;"></span>
                        </div>
                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Email
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Không bỏ trống email">
                            <input asp-for="email" class="input100" type="text" >
                            <span asp-validation-for="email" class="focus-input100" style="color: red;"></span>
                        </div>
                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Số điện thoại
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input">
                            <input asp-for="sdt" class="input100" type="text">
                            <span asp-validation-for="sdt" class="focus-input100" style="color: red;"></span>
                        </div>
                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Địa chỉ
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input">
                            <input asp-for="diachi" class="input100" type="text">
                            <span asp-validation-for="diachi" class="focus-input100" style="color: red;"></span>
                        </div>
                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Họ Tên
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" >
                            <input asp-for="hoten" class="input100" type="text">
                            <span asp-validation-for="hoten" class="focus-input100" style="color: red;"></span>
                        </div>
                        <div class="container-login100-form-btn m-t-17">
                            <button class="login100-form-btn">
                                Đăng ký
                            </button>
                        </div>
                        <span class="login100-form-title p-b-53">
                            Hoặc đăng nhập với
                        </span>

                        <a href="#" class="btn-face m-b-20">
                            <i class="fa fa-facebook-official"></i>
                            Facebook
                        </a>

                        <a href="#" class="btn-google m-b-20">
                            <img src="~/contentRegister/images/icons/icon-google.png" alt="GOOGLE">
                            Google
                        </a>
                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/bootstrap/js/popper.js"></script>
    <script src="~/contentRegister/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/contentRegister/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/contentRegister/js/main.js"></script>

</body>
</html>

